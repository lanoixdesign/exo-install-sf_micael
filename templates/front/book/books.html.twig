{% for book in books %}
    <h1>Mon livre : </h1>
    <div>
        <p>Titre : {{ book.title }}</p>
        <p>Auteur : {{ book.author }}</p>
        <p>Résumé : {{ book.resume }}</p>
        <p>Nombre de pages : {{ book.nbPages }}</p>
    </div>
    <a href="{{ path('book_show', {'id' : book.id}) }}">
        Voir le livre
    </a>
{% endfor %}
